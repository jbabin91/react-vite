{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "body-max-line-length": [
      2,
      "always",
      80
    ],
    "header-max-length": [
      2,
      "always",
      72
    ],
    "header-min-length": [
      2,
      "always",
      8
    ],
    "subject-max-length": [
      2,
      "always",
      50
    ],
    "subject-min-length": [
      2,
      "always",
      3
    ]
  }
}